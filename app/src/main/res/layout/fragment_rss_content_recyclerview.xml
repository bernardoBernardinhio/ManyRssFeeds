<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#FFFFFF"
        app:cardElevation="5dp"
        app:cardCornerRadius="10sp"
        app:cardUseCompatPadding="true"
        android:onClick="openWebView">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp">
        <TextView
                android:id="@+id/tv_fragment_feed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000000"
                android:layout_marginVertical="5sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="tv_fragment_feed_title"/>
        <ImageView
                android:id="@+id/iv_fragment_feed_image"
                app:layout_constraintWidth_default="percent"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="1:0.5"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_fragment_feed_title"/>
        <TextView
                android:id="@+id/tv_fragment_feed_publish_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#650176"
                android:layout_marginVertical="5sp"
                app:layout_constraintTop_toBottomOf="@id/iv_fragment_feed_image"
                tools:text="tv_fragment_feed_publish_date"/>
        <TextView
                android:id="@+id/tv_fragment_feed_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000000"
                android:layout_marginVertical="5sp"
                app:layout_constraintTop_toBottomOf="@id/tv_fragment_feed_publish_date"
                tools:text="tv_fragment_feed_description"/>
        <TextView
                android:id="@+id/tv_fragment_feed_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#4003AB"
                android:background="#F7EBC9"
                android:layout_marginVertical="5sp"
                app:layout_constraintTop_toBottomOf="@id/tv_fragment_feed_description"
                tools:text="tv_fragment_feed_link"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>