<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#DED2FF"
        android:padding="10sp"
        android:layout_marginVertical="5sp">
    <ImageView
            android:id="@+id/iv_fragment_image"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".25"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/tv_fragment_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_fragment_subtitle"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:id="@+id/tv_fragment_title"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"
            android:padding="5sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_fragment_image"
            tools:text="title"/>
    <TextView
            android:id="@+id/tv_fragment_subtitle"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"
            android:padding="5sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_image"
            app:layout_constraintLeft_toRightOf="@id/iv_fragment_image"
            tools:text="location"/>
    <TextView
            android:id="@+id/tv_fragment_right_hint"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"
            android:padding="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_image"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="cost"/>
</android.support.constraint.ConstraintLayout>